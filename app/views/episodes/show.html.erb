<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

<h1 class="title">Informacion de Breaking bad y Better Call Saul</h1>

<table class="table is-striped">
        <th> <%= "Episodio #{@episode.episode}" %></th>
          <tr> <%= "TÍTULO #{@episode.title}" %> </tr>
          <tr> <%= "TEMPORADA #{@episode.season}" %> </tr>
          <tr> <%= "LANZAMIENTO #{@episode.air_date}" %> </tr>
          <tr> <%= "SERIE #{@episode.series}" %> </tr>
        </tr>
        <% @episode.characters.each do |char| %>
        <tr>
          <td><%= link_to char, character_path(find_character_id(char)) %>
        </tr>
        <% end %>
</table>