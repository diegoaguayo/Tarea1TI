<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

<h1 class="title">Informacion de capítulo</h1>

<%= "Episodio #{@episode.episode}" %> <br>
<%= "Título: #{@episode.title}" %> <br>
<%= "Temporada: #{@episode.season}" %> <br>
<%= "Lanzamiento: #{@episode.air_date}" %> <br>
<%= "Serie: #{@episode.series}" %> <br>

<br>
<br>
<p> Personajes que aparecen en este episodio </p>
<% @episode.characters.each do |char| %>
        <tr>
          <td><%= link_to char, character_path(find_character_id(char)) %>
        </tr>
        <% end %>
</table>